<div class="edit">
  <h1>Editing Book</h1>
  <%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
    <div class="error">
      <h2 class="error-text">
        <%= pluralize(@book.errors.count, "error") %> prohidited this product from being saved:
      </h2>
      <ul class="error-message">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit "Update Book" %>
  <% end %>
  <p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>
</div>