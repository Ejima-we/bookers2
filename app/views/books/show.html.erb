<div class="row pt-3">
  <div class="col-md-3">

    <%= render "users/user", user: @user %>

    <%= render "books/new", book: @book_new %>

  </div>
  <div class="col-md-8 offset-md-1">
    <h1>Book detail</h1>
    <table class="table">
      <tr>
        <td><%= link_to user_path(@book.user.id) do %>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
          <p><%= @book.user.name %></p>
        <% end %></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td>
          <% if @book.favorited_by?(current_user) %>
              <p>
                <%= link_to book_favorites_path(@book), method: :delete do %>
                  <i class="fas fa-heart"></i><%= @book.favorites.count %>
                <% end %>
              </p>
            <% else %>
              <p>
                <%= link_to book_favorites_path(@book), method: :post do %>
                  <i class="far fa-heart"></i><%= @book.favorites.count %>
                <% end %>
              </p>
            <% end %>
        </td>
        <td>
          <p>コメント数: <%= @book.book_comments.count %></p>
        </td>
        <% if @book.user == current_user %>
          <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
          <td><%= link_to "Destroy", book_path(@book), class: "btn btn-danger", method: :delete, data: {confirm: "本当に消しますか？"} %></td>
        <% end %>
      </tr>
    </table>
    <table>
      <% @book.book_comments.each do |book_comment| %>
      <tr>
        <td>
          <p><%= image_tag("no_image.jpg") %></p>
          <%= link_to "#{book_comment.user.name}", user_path(book_comment.user_id) %>
        </td>
        <td>
          <%= book_comment.comment %>
        </td>


        <td>
          <% if current_user.id == book_comment.user_id %>
            <%= link_to "Destroy", book_book_comment_path(book_comment.book_id, book_comment.id), method: :delete %>
          <% end %>
        </td>
        <% end %>
      </tr>

    </table>
    <div class="new-comment">
      <%= form_with(model:[@book, @book_comment_new], local: true) do |f| %>
        <%= f.text_area :comment, rows:"5", class:"col-8" %>
        <%= f.submit "送信する" %>
      <% end %>
    </div>
  </div>
</div>