  <div class="row">
    <div class="mx-auto mt-4">
      <h2>New book</h2>
      <%= form_with model: book, url:"/books", local:true do |f| %>
        <p>Title</p>
        <%= f.text_field :title, class: "field" %>
        <p>Opinion</p>
        <%= f.text_area :body, class: "field" %>
        <%=f.submit "Create Book", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
